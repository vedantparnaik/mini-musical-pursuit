<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Music Entry</h1>
        <p class="text-center">Review and share an entire album, a specific artist, or even just a single track!</p>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/music" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="album title - artist name - track">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url (album or artist photo recommended)">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" rows="10" cols="50" placeholder="Review/Summary"></textarea>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/music">Go Back</a>
        </div>
    </div>
    
    
</div>

<% include ../partials/footer %>