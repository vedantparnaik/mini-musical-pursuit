<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container text-center">
            <h1>Welcome To MusicalPursuit!</h1>
            <p>In pursuit of some new cool music? Take a look at some of the entries and reviews posted by others below.</p>
            <p>Want to share your own favorite music with others? Click on the button and get started!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/music/new">Add New Music!</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        
        <% music.forEach(function(music){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= music.image %>">
                    <div class="caption">
                        <h4><%= music.name %></h4>
                    </div>
                    <p>
                        <a href="/music/<%= music._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
    
</div>
<% include ../partials/footer %>