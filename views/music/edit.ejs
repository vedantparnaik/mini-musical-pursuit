<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= music.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/music/<%= music._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="music[name]" value="<%= music.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="music[image]" value="<%= music.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="music[description]" rows="10" cols="50"><%= music.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/music">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>